<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="rohitkhirid.com.galleryappagrostar.activities.DashboardActivity">

    <com.malinskiy.superrecyclerview.SuperRecyclerView
        android:id="@+id/images_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/select_photo_button"
        app:layout_empty="@layout/empty_view_images_recycler_view" />

    <Button
        android:id="@+id/select_photo_button"
        style="@style/StickyButtonTheme"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/label_select_photo" />

</RelativeLayout>
